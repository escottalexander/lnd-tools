{
  "name": "lnd-tools",
  "version": "1.0.0",
  "description": "On-host tools for LND",
  "main": "lnd-tools.js",
  "bin": "lnd-tools.js",
  "license": "ISC",
  "engines": {
    "node": "16"
  },
  "keywords": [
    "bitcoin",
    "lnd",
    "lightning"
  ],
  "author": "Kenny Joseph",
  "contributors": [
    {
      "name": "Kenny Joseph",
      "email": "kjoseph@bitpay.com"
    }
  ],
  "scripts": {
    "start": "node index.js",
    "build": "./build.sh",
    "compile": "pkg .",
    "test": "test",
    "test:integration": "cd test/integration && ./testRunner.js"
  },
  "pkg": {
    "assets": [
      "node_modules/classic-level/prebuilds/**/*",
      "server/**/*.js",
      "client/**/*.js",
      "*.js",
      "node_modules/**/*"
    ],
    "targets": [
      "node16-linux-x64"
    ],
    "outputPath": "build"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "crypto-rpc": "https://github.com/bitpay/crypto-rpc.git#e8106ed18740b0257a90365e830726cd66e912f6",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "mocha": "^10.0.0",
    "pkg": "^5.8.0",
    "sinon": "^14.0.0",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "commander": "^9.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "level": "^8.0.0",
    "level-read-stream": "^1.1.0",
    "lightning": "^5.20.1",
    "secp256k1": "^4.0.3"
  }
}
